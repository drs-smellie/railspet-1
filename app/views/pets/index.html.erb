<h1>My Pets</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Max weight</th>
      <th>Foods Eaten</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= image_tag(pet.picture_url, width: 200) if pet.picture.present? %></td>
        <td><%= pet.name %></td>
        <td><%= pet.max_weight %> kg</td>
        <td><%= pet.eaten_foods %>%</td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Delete', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pet', new_pet_path %>
